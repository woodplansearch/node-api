{
  "name": "@woodplansearch/node-api",
  "version": "1.0.0",
  "description": "Node API for woodplansearch.com",
  "engines": {
    "node": "^12.19"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node index.js",
    "compile-schemas": "json2ts -i schemas -o types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woodplansearch/node-api.git"
  },
  "author": "Andy Pickler",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/woodplansearch/node-api/issues"
  },
  "homepage": "https://github.com/woodplansearch/node-api#readme",
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/eslint": "^7.2.4",
    "@types/node": "^12.12.6",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
